-typed: '#!/usr/bin/env python3'
        'from pwn import *'
        'context.log_level = 'error''
        'p = process("/challenge/runme")'
        'password = b"XH16gGsHceo="'
        'password = password.decode()'
        'payload = base64.b64decode(password)'
        'print(payload)'
        'p.write(payload)'
        'result = p.readall()'
        'print(result.decode('utf-8'))'
