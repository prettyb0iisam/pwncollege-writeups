-typed: '.intel_syntax noprefix'
        '.global _start'
        '_start:'
        'mov rax, 0'
        'mov rdx, rsi'
        'loop:'
        'cmp rdx, 0'
        'jz done'
        'add rax, [rdi]'
        'add rdi, 8'
        'dec rdx'
        'jmp loop'
        'done:'
        'mov rdi, 0'
        'div rsi'
-ran: 'as -o bro.o bro.s'
-ran: 'ld -o bro bro.o'
-ran: '/challenge/run bro'
